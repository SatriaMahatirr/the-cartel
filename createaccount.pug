extends _template2.pug

block konten
  style.
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: linear-gradient(135deg, #1f3a6e, #4f82d4);
    }
    .container {
      display: flex;
      width: 800px;
      height: 300px; 
      background-color: #0b1120;
      border-radius: 10px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);      
      margin-top: 300px;
    }
    .left {
      flex: 1;
      background: url('your-image-url.jpg') no-repeat center center;
      background-size: cover;
      border-top-left-radius: 10px;
      border-bottom-left-radius: 10px;
    }
    .right {
      flex: 1;
      background: #0d1b2a;
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 30px;
    }
    h2 {
      color: white;
      margin-bottom: 30px;
      font-size: 24px;
      text-align: center;
    }
    label {
      color: white;
      margin-bottom: 5px;
      display: block;
    }
    input {
      width: 100%;
      padding: 10px;
      margin-bottom: 20px;
      border: 1px solid #4f82d4;
      border-radius: 5px;
      background-color: #132d4d;
      color: white;
    }
    input::placeholder {
      color: #9aaecb;
    }
    button {
      padding: 10px;
      width: 100%;
      background-color: #4f82d4;
      border: none;
      border-radius: 5px;
      color: white;
      cursor: pointer;
    }
    button:hover {
      background-color: #3b71b4;
    }

  .container
    .left
    .right
      h2 Create Account
      form
        label(for="fname") First name
        input(type="text" id="fname" name="fname" placeholder="First name")

        label(for="lname") Last name
        input(type="text" id="lname" name="lname" placeholder="Last name")

        label(for="email") Email Address
        input(type="email" id="email" name="email" placeholder="Email Address")

        label(for="password") Password
        input(type="password" id="password" name="password" placeholder="Password")

        button(type="submit") Register
