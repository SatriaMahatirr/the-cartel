doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Social Media Icons with Auto Layout
    style.
      body {
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f9f9f9;
      }
      .social-container {
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0;
        gap: 170px;
        position: absolute;
        width: 1215px;
        height: 77px;
        left: 145px;
        top: 986px;
      }
      .social-container a {
        display: inline-block;
        width: 50px;
        height: 50px;
        background-color: #000;
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 10px;
        transition: background-color 0.3s ease;
      }
      .social-container a:hover {
        background-color: #007bff; 
      }
      .social-container a img {
        width: 30px;
        height: 30px;
        filter: invert(100%); 
      }
  body
    .social-container
      a(href="#")
        img(src="icons/instagram.png" alt="Instagram")
      a(href="#")
        img(src="icons/tiktok.png" alt="TikTok")
      a(href="#")
        img(src="icons/youtube.png" alt="YouTube")
      a(href="#")
        img(src="icons/linkedin.png" alt="LinkedIn")
      a(href="#")
        img(src="icons/facebook.png" alt="Facebook")
