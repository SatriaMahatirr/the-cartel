mixin socialButtons()
  style.
    .social-buttons-wrapper {
      border: 2px solid white; 
      padding: 20px; 
      border-radius: 10px; 
      position: absolute; 
      right: 225px; 
      top: 600px; 
      display: flex;
      flex-direction: column; 
      align-items: center; 
      text-align: center;
    }

    .social-buttons {
      display: flex;
      flex-direction: column; 
      gap: 30px; 
      margin-top: 15px; 
    }

    .follow-us-text {
      font-size: 1.2em; 
      color: white; 
      margin: 0; 
    }

    .button {
      display: flex;
      align-items: center;
      padding: 10px 20px;
      border: 1px solid black; 
      border-radius: 5px;
      color: white;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.3s;
      width: 150px;
    }

    .instagram {
      background-color: #E1306C;
    }

    .twitter {
      background-color: #1DA1F2;
    }

    .youtube {
      background-color: #FF0000;
    }

    .button:hover {
      opacity: 0.8;
    }

    .button i {
      margin-right: 8px; 
    }

  .social-buttons-wrapper
    p.follow-us-text Follow Us
    .social-buttons
      button(class="button instagram")
        i(class="fab fa-instagram")
        |  Instagram
      button(class="button twitter")
        i(class="fab fa-twitter")
        |  Twitter
      button(class="button youtube")
        i(class="fab fa-youtube")
        |  YouTube
