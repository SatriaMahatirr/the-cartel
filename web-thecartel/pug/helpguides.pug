mixin ecommerceGuideSection()
  style.
    body {
      font-family: Arial, sans-serif;
      color: white;
      margin: 0;
      padding: 0;
    }
    .ecommerce-wrapper {
      border: 1px solid white;
      padding: 15px;
      border-radius: 8px;
      max-width: 450px;
      position: absolute;
      top: 900px;
      right: 100px;
      text-align: center;
    }
    .guide-title {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 10px;
    }
    .guide-post {
      margin-bottom: 10px;
      padding: 8px;
      border-radius: 5px;
      transition: transform 0.3s, background-color 0.3s;
    }
    .guide-post:hover {
      background-color: rgba(255, 255, 255, 0.1);
      transform: scale(1.03);
    }
    .guide-content h3 {
      font-size: 14px;
      margin: 0 0 5px;
      color: white;
    }
    .guide-content p {
      font-size: 12px;
      margin: 3px 0;
    }

  .ecommerce-wrapper
    .guide-title Help Guides

    .guide-post
      .guide-content
        h3 • How To Choose the Best Ecommerce Platform for Your Business

    .guide-post
      .guide-content
        h3 • How to Start an Ecommerce Business – The Complete Beginner’s Guide

    .guide-post
      .guide-content
        h3 • A Beginner’s Guide to Ecommerce SEO
