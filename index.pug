extends _template.pug

block konten
  style.
    /* CSS Styles */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Poppins', sans-serif;
      line-height: normal;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      min-height: 100vh;
      background-color: #f4f4f4; /* Menambahkan warna latar belakang */
    }

    .frame-parent {
      position: relative;
      width: 100%;
      max-width: 1440px;
      text-align: left;
      color: #fff;
      padding: 20px; /* Menambahkan padding untuk menjaga jarak dari tepi */
    }

    .twitterx-parent {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap; /* Memungkinkan ikon untuk berbaris dengan baik */
      margin-bottom: 30px; /* Menambahkan jarak antara bagian atas dan konten */
    }

    .twitterx-icon {
      width: 55px;
      height: 55px; /* Mengubah tinggi agar konsisten */
      object-fit: cover;
    }

    .rectangle-divv {
      filter: blur(10px); /* Mengurangi efek blur */
      background: conic-gradient(from 180deg at 50% 50%, #254b62 -9.27deg, #9eb1bb 58.17deg, #99adb7 162.39deg, #476d7c 277.94deg, #254b62 350.73deg, #9eb1bb 418.17deg);
      height: 596px;
      position: relative;
      margin-bottom: 40px; /* Menambahkan jarak di bawah bagian ini */
    }

    .the {
      position: absolute;
      top: 30px;
      left: 20px;
      font-size: 96px;
      background: linear-gradient(180deg, #999 9.5%, #fff 86.5%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .cartel {
      position: absolute;
      top: 110px;
      left: 20px;
      font-size: 96px;
      background: linear-gradient(180deg, #2581f7 42.67%, #164c91 74.96%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .fashion-on-a-container, .emerging-technology-trends-container {
      margin: 20px 0;
      font-size: 20px;
      font-weight: 500;
    }

    .fashion-on-a-budget-trendy-ti1 {
      color: inherit;
      text-decoration: underline;
    }

    .image-57-icon, .image-58-icon {
      width: 251px;
      height: 228px;
      object-fit: cover;
    }

    .unlimited-shopping-find {
      font-size: 32px;
      font-weight: 500;
      background: linear-gradient(90deg, #fff, #999 37.5%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      display: inline-block;
      margin: 20px 0;
    }

    /* Mengatur tata letak gambar dan teks */
    .content-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 20px;
    }

    .text-container {
      flex: 1; /* Membuat teks mengambil ruang tersisa */
      margin: 0 20px; /* Memberikan margin di sisi kiri dan kanan */
    }

  .frame-parent
    .twitterx-parent
      img.twitterx-icon(alt="Twitter", src="web-thecartel/image/TwitterX.png")
      img.twitterx-icon(alt="TikTok", src="web-thecartel/image/TikTok.png")
      img.twitterx-icon(alt="YouTube", src="web-thecartel/image/YouTube.png")
      img.twitterx-icon(alt="LinkedIn", src="web-thecartel/image/LinkedIn.png")
      img.twitterx-icon(alt="Instagram", src="web-thecartel/image/Instagram.png")
      img.twitterx-icon(alt="Facebook", src="web-thecartel/image/Facebook.png")

